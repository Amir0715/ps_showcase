{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Django makemigrations",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}${pathSeparator}backend${pathSeparator}manage.py",
                "makemigrations",
                "${input:appName}"
            ]
        },
        {
            "label": "Django migrate",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}${pathSeparator}backend${pathSeparator}manage.py",
                "migrate"
            ],
            "dependsOn": [
                "Django makemigrations"
            ],
            "problemMatcher": []
        },
        {
            "label": "Django: run dev server",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}${pathSeparator}backend${pathSeparator}manage.py",
                "runserver"
            ]
        },
        {
            "label": "React: run dev server",
            "type": "shell",
            "command": "yarn",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}${pathSeparator}frontend",
            }
        },
    ],
    "inputs": [
        {
            "id": "appName",
            "type":"promptString",
            "description": "Для какого приложения создать миграцию?",
            "default": ""
        },
    ]
}